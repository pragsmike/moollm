# Structured Plan
# Track task decomposition and progress

plan:
  name: "{{ plan_name }}"
  objective: "{{ objective }}"
  status: "not_started"
  created: "{{ created_date }}"

success_criteria:
{{ #each success_criteria }}
  - "{{ this }}"
{{ /each }}

steps:
{{ #each initial_steps }}
  - id: {{ @index + 1 }}
    name: "{{ name }}"
    status: "pending"
    depends_on: {{ depends_on | default [] }}
    notes: ""
    outcome: ""
{{ /each }}
