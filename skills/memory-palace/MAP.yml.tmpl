# Memory Palace Map
# Navigate with: cat MAP.yml

palace:
  name: "{{ palace_name }}"
  purpose: "{{ palace_purpose }}"
  created: "{{ created_date }}"
  
entry_point: "ENTRY.md"

rooms:
{{ #each initial_rooms }}
  - name: "{{ name }}"
    path: "{{ name | slugify }}/"
    description: "{{ description }}"
    connects_to: []
    artifacts: []
{{ /each }}

landmarks: []
