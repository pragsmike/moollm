# Working Set for Basic Skill Instance
protocol: CONTEXT-ASSEMBLY/0.1

budget:
  max_tokens: 28000
  reserved_for_response: 4000
  effective: 24000

files:
  # Always include task definition
  - path: "TASK.yml"
    priority: 1.0
    role: "developer"
    truncate_strategy: "never"
    
  # Checklist for guidance
  - path: "CHECKLIST.md"
    priority: 0.9
    role: "developer"
    truncate_strategy: "end"
    
  # Current progress
  - path: "state/progress.yml"
    priority: 0.8
    role: "context"
    truncate_strategy: "start"
    
  # Add context files as needed:
  # - path: "context/relevant-doc.md"
  #   priority: 0.7
  #   role: "context"

metadata:
  skill: "basic-skill"
  notes: "Initial working set for basic skill"
