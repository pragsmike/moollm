# Task Specification
# Rendered from template at instantiation time

protocol: SIP/0.1
task_id: "{{task_id}}"

task:
  name: "{{task_name}}"
  description: "{{task_description}}"
  created: "{{timestamp}}"
  
parameters:
  # Task-specific parameters go here
  # Example:
  # input_file: "data/input.csv"
  # output_format: "json"

context:
  # Links to relevant files
  files: []
  
  # Notes from instantiation
  notes: "{{notes}}"

success_criteria:
  # How do we know the task is complete?
  - "RESULT.md exists"
  - "RETURN.md exists"
  # Add task-specific criteria:
  # - "Output file generated"
  # - "Tests pass"

timeout:
  soft: "30m"   # Suggest checking progress
  hard: "2h"    # Consider abandoning
