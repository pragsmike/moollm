# Sister Script Manifest
# Tracks relationship between document and script

sister:
  name: "{{procedure_name}}"
  created: "{{timestamp}}"
  
  document:
    path: "PROCEDURE.md"
    last_modified: "{{timestamp}}"
    sections_automated:
      - section: "main-procedure"
        lines: "10-50"
        
  script:
    path: "SISTER.{{language}}"
    language: "{{language}}"
    last_modified: "{{timestamp}}"
    
  sync:
    status: "in_sync"  # in_sync | doc_ahead | script_ahead | diverged
    last_checked: "{{timestamp}}"
    
# SECTION MAPPING

section_map:
  # Maps document sections to script functions
  - doc_section: "Step 1: Setup"
    script_function: "setup()"
    
  - doc_section: "Step 2: Process"
    script_function: "process()"

# SYNC LOG (recent)

recent_sync:
  - timestamp: "{{timestamp}}"
    direction: "doc_to_script"
    note: "Initial generation"
